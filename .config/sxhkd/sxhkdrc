# quit
super + Escape
        pkill xfwm4

# terminal
super + Return
        alacritty

# program launcher
super + @space
        rofi -show drun

# file manageer
super + d
        thunar

# browser
super + b
        chromium

# screenshots
Print
	screenshot.sh
super + s
	xfce4-screenshooter

# audio player
super + m
	alacritty -e ncmpcpp

# audio visualizer
super + shift + m
	tilda -c cava

# lockscreen
super + Delete
        xtrlock
super + y
	i3lock -i ~/wall.png

# reload sxhkd config
super + shift + r
	pkill -USR1 -x sxhkd

