#!/bin/bash

### GLOBAL AUTOSTART ###

# load custom fonts
xset +fp /home/diws/.fonts/
xset fp rehash

# notification
/usr/lib/x86_64-linux-gnu/xfce4/notifyd/xfce4-notifyd &

# mpd
mpd &


### START THE APPLICATIONS ON DE/WM ###

wm_name=$(echo $DESKTOP_SESSION)
wm_1=xfwm
wm_2=dwm
wm_3=twm

if [ $wm_name = $wm_1 ]; then
    # wallpaper
    nitrogen --restore &
    # panel
    ~/.config/polybar/themes/T6/launch.sh &
    # etc
    sxhkd &
    picom -f &

elif [ $wm_name = $wm_2 ]; then
    # wallpaper
    ~/.fehbg &
    # panel
    sxstatus &

else
    # wallpaper
    xwallpaper --zoom ~/Pictures/twm_wall.jpg &
    # panel
    xmobar ~/.config/xmobar/xmobarrc &
    # etc
    picom --corner-radius 0 &

fi


